<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/red_background"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="@dimen/m8"
        android:layout_marginRight="@dimen/m8"
        android:layout_marginTop="@dimen/m4"
        android:background="@color/red">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/coupon_btml" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/red_packet_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m8"
                android:layout_marginTop="@dimen/m4"
                android:text="¥100.00"
                android:textColor="@color/white"

                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/red_packet_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m8"
                android:layout_marginTop="@dimen/m4"
                android:text="来源：活动特权金--杨"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/red_packet_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m8"
                android:layout_marginTop="@dimen/m4"
                android:text="特权金状态：可用"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/red_packet_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m8"
                android:layout_marginTop="@dimen/m4"
                android:text=",'该特日期前未使用，已过期','该特权金在截止日期前未使用，已过期','该特权金在截止日期前未使用，已过期')"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/red_packet_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m8"
                android:layout_marginTop="@dimen/m4"
                android:text="截止日期：活动特权金--杨"
                android:textSize="12sp"
                android:textStyle="bold" />


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/coupon_btmr" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/m8"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="@dimen/m8"
            android:scaleType="fitXY"
            android:src="@drawable/coupon" />

    </RelativeLayout>


</RelativeLayout>
