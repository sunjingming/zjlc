<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/money_record_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/m8"
            android:textColor="@color/red" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/m8"
            android:layout_marginTop="@dimen/m4"
            android:background="@color/gray3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/m8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/money_record_use_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m4"
                android:layout_marginTop="@dimen/m8"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/money_record_add_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m4"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/money_record_affect_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m4"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/money_record_recover_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m4"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/money_record_wait_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m4"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/money_record_freeze_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m4"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/money_record_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m4"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/money_record_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/m4"
                android:layout_marginTop="@dimen/m8"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="@dimen/m4"
        android:layout_marginRight="@dimen/m4"
        android:layout_marginTop="@dimen/m8"
        android:background="@color/red" />


</LinearLayout>
