<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="vertical"
    android:scrollbars="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="com.example.administrator.zjlc.invest.InvestBorrow">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/m8"
                android:text="*  分类：    "
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/borrow_style"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/m8"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/assistant_below"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/m8"
                android:text="*  联系人："
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/borrow_name"
                style="@style/EditTextStyle"
                android:layout_height="35dp"
                android:layout_marginRight="@dimen/m8"
                android:layout_marginTop="@dimen/m4"
                android:hint="请输入姓名"
                android:textColor="@color/black"
                android:textColorHint="@color/gray9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/m8"
                android:text="*  所在城市：    "
                android:textColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/m8"
                android:text="云南省    "
                android:textColor="@color/black" />
            <Spinner
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:id="@+id/borrow_area"
                android:layout_marginRight="@dimen/m8"
                android:background="@color/white"
                android:text="昭通"
                android:layout_marginLeft="@dimen/t18"
                android:textColor="@color/black"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/m8"
                android:text="*  手机号："
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/borrow_phone"
                style="@style/EditTextStyle"
                android:layout_height="35dp"
                android:layout_marginRight="@dimen/m8"
                android:layout_marginTop="@dimen/m4"
                android:hint="请输入手机号"
                android:textColor="@color/black"
                android:textColorHint="@color/gray9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m4"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/m8"
                android:text="*  融资金额：    "
                android:textColor="@color/black" />


            <EditText
                android:id="@+id/borrow_money"
                style="@style/EditTextStyle"
                android:layout_height="35dp"
                android:layout_marginRight="@dimen/m8"
                android:layout_marginTop="@dimen/m4"
                android:hint="请输入借款金额"
                android:textColor="@color/black"
                android:textColorHint="@color/gray9" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/m8"
                android:text="*  融资期限：    "
                android:textColor="@color/black" />

            <Spinner
                android:id="@+id/borrow_time"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/m8"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/assistant_below"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/m8"
                android:text="*  借款用途："
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/borrow_address"
                style="@style/EditTextStyle"
                android:layout_height="60dp"
                android:layout_marginRight="@dimen/m8"
                android:layout_marginTop="@dimen/m4"
                android:hint="请填写地址"
                android:textColor="@color/black"
                android:textColorHint="@color/gray9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/m8"
                android:text="抵押物信息：    "
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/borrow_introduce"
                style="@style/EditTextStyle"
                android:layout_height="35dp"
                android:layout_marginRight="@dimen/m8"
                android:layout_marginTop="@dimen/m4"
                android:hint="请填写抵押物信息"
                android:textColor="@color/black"
                android:textColorHint="@color/gray9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/m8"
                android:text="*  验证码：    "
                android:textColor="@color/black" />


            <EditText
                android:id="@+id/borrow_code"
                style="@style/EditTextStyle"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginRight="@dimen/m8"
                android:layout_marginTop="@dimen/m4"
                android:hint="请输入验证码"
                android:textColor="@color/black"
                android:textColorHint="@color/gray9" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/get_image_code"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/borrow_submit"
            style="@style/SubmitButtonStyle"
            android:layout_marginLeft="@dimen/m8"
            android:layout_marginRight="@dimen/m8"
            android:layout_marginTop="@dimen/m48"
            android:layout_marginBottom="@dimen/m48"
            android:enabled="false"
            android:text="借款申请" />


    </LinearLayout>
</ScrollView>