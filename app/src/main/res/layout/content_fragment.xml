<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.administrator.zjlc.view.NoScrollViewPager
        android:id="@+id/vp_content_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:padding="10dp"
        android:id="@+id/rg_bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/bottom_tab_style"
            android:text="首页"
            android:drawableTop="@drawable/rb_home_selector"
            />

        <RadioButton
            android:id="@+id/rb_newscenter"
            style="@style/bottom_tab_style"
            android:text="账户"
            android:drawableTop="@drawable/rb_chanpin_selector"
            />

        <RadioButton
            android:id="@+id/rb_govaffair"
            style="@style/bottom_tab_style"
            android:text="发现"
            android:drawableTop="@drawable/rb_faxian_selector"
            />
        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/bottom_tab_style"
            android:text="更多"
            android:drawableTop="@drawable/rb_wo_selector"
            />

    </RadioGroup>

</LinearLayout>