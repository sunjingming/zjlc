<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="20dp"
        android:drawableLeft="@drawable/back"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:id="@+id/tv_pasnt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/colorAccent"
        android:text="项目详情" />
    <com.example.administrator.zjlc.view.MyScrollView
        android:id="@+id/tv_scr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_passs"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/detail_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:textSize="@dimen/m24"
                    android:textColor="@color/black_gray"
                    android:text="年化利率"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_lilv"
                    android:layout_gravity="center"
                    android:textSize="@dimen/m32"
                    android:textColor="@color/black_gray"
                    android:text="0.00%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:text="募集天数"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_times"
                            android:padding="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:text="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:text="项目期限"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:padding="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:text="0个月"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_timess" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <TextView
                            android:padding="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:text="已筹资金"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_menoy"
                            android:padding="15dp"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:text="0.00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_yue"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:padding="20dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:text="您的余额：00.00(元)"
                    android:background="@drawable/biankuang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvjineeee"
                    android:textColor="@color/gray16"
                    android:textSize="12dp"
                    android:text="最小投资金额0,最大投资金额0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="5dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="20dp"
                        android:textColor="@color/colorhei"
                        android:text="投资金额:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:textColor="@color/colorhei"
                        android:id="@+id/et_je"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="20dp"
                        android:textColor="@color/colorhei"
                        android:text="交易密码:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:textColor="@color/colorhei"
                        android:id="@+id/et_mm"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/tequanjine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:text="可用特权金："
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/t20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tequanjin"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="特权金选择"
                    android:background="@drawable/biankuang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/lijigou"
                    android:text="立即申购"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    style="@style/SubmitButtonStyles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_gravity="bottom"
                android:gravity="bottom|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:paddingTop="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/tv_xiangqing"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorhei"
                    android:text="继续滑动,加载详情哦！"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </com.example.administrator.zjlc.view.MyScrollView>
</LinearLayout>
