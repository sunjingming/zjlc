<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/gray3"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/m4"
        android:layout_marginLeft="@dimen/m8"
        android:layout_marginRight="@dimen/m8"
        android:layout_marginBottom="@dimen/m4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cash_record_time"
                style="@style/MoreItemStyle"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/cash_record_money"
                style="@style/MoreItemStyle"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/cash_record_state"
                style="@style/MoreItemStyle"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/black" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
