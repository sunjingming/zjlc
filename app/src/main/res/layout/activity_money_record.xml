<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray3"
    tools:context="com.example.administrator.zjlc.invest.MoneyRecord">
    <include layout="@layout/toolbar"/>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/money_record_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.handmark.pulltorefresh.library.PullToRefreshListView>

    <TextView
        android:id="@+id/money_record_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/m48"
        android:drawableTop="@drawable/empty"
        android:drawablePadding="@dimen/m8"
        android:layout_marginTop="@dimen/m48"
        android:text="资金记录暂无数据(拖动沙漏以刷新)"
        android:textColor="@color/black"
        android:textSize="18sp" />


</LinearLayout>
